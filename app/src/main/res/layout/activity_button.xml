<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/tv"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/tv1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/smarttelevesion1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Smart Tv"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/ac"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/airconditioner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Air Conditioner"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/light"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/lightbulb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Light"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/washing"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/washingmachine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Wash Machine"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/fridge"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Refrigerator"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/wifi"
        android:layout_height="125dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageairconditionar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="Router"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnPower"
        android:layout_width="100dp"
        android:layout_height="92dp"
        app:cardBackgroundColor="@color/colorOrange"
        app:cardCornerRadius="50dp"
        android:layout_above="@+id/navigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorOrange"
        android:layout_marginBottom="20dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_power_settings_new_black_24dp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
</RelativeLayout>